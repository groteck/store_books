<h1>Listing books</h1>
<%= form_for @search, :url => books_path, :html => {:method => :get} do |f| %>
  <%= f.label :title_contains %>
  <%= f.text_field :title_contains %><br />
  <%= f.submit %>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Sinopsis</th>
    <th>Price</th>
    <th>Author</th>
    <th>Editorial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.sinopsis %></td>
    <td><%= book.price %></td>
    <td><%= book.author %></td>
    <td><%= book.editorial %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

